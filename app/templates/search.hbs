<script type="text/javascript">
    var type = "Anime";

    $('#search-submit').click(function(e)
    {
        if($('#search-value')) {
            var url = "search?q=" + $('#search-value').val() + "&type=" + type.toLowerCase()
            window.location.replace(url);
        }

    });

    //prevent redirection
    $('ul.search-type li a').on('click', function(e) {
        e.preventDefault();
    });

    $(document).ready(function()
    {
        $('ul.search-type li').click(function(e)
        {
            type = $(this).find("a").text();
        });
    });


</script>

<div class="container vertical-center">
  <div class="row " >
      <div class="col-xs-8 center-block">
          <div class="input-group">
              {{input id="search-value" required="true" type="text" class="form-control" placeholder="Search for..." value=searchValue}}
              <span class="input-group-btn">
                <button id="search-submit" class="btn btn-default">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Go&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
              </span>
          </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->

      <div class="col-xs-8 center-block">
          <nav style="margin-top:-20px">
            <ul class="search-type pagination">
                <li><a href="#">Anime</a></li>
                <li><a href="#">Manga</a></li>
                <li><a href="#">Mangaka</a></li>
                <li><a href="#">Character</a></li>
                <li><a href="#">Podcast</a></li>
            </ul>
        </nav>
      </div><!-- /.col-lg-6 -->

  </div><!-- /.row -->
</div><!-- /.row -->

